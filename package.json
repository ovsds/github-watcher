{
  "private": true,
  "name": "github-watcher",
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.4.2",
    "pyright": "^1.1.403"
  },
  "hooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint"
  },
  "lint-staged": {
    "*.{md,yaml,json,js}": [
      "prettier --check"
    ]
  },
  "scripts": {
    "prepare": "husky"
  }
}
